<div class='container'>
  <h1><%= @cocktail.name %></h1>
    <div clas='container'>
      <% if @cocktail.photo.attached? %>
        <%= cl_image_tag @cocktail.photo.key, height: 300, width: 200, crop: :fit %>
      <% end %>
      <% @cocktail.doses.each do |dose|%>
      <p>Ingredients : <%= dose.ingredient.name %>  /
          Doses : <%= dose.description %> <%= link_to "", dose_path(dose),
          method: :delete, data: { confirm: "DELETE ?" }, :class => "far fa-trash-alt" %>
          <% end %>
      </p>
    </div>
    <hr>
    <div>
      <%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail), :class => "btn btn-primary" %>
    </div>
    <hr>
    <div class="btn btn-primary">
    <%= link_to 'Back to Cocktails list', root_path, :class => "btn btn-primary" %>
    </div>
</div>
